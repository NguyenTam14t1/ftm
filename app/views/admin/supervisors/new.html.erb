<% provide(:title, 'Create supervisor') %>
<h1>Create supervisor</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @supervisor, as: :supervisor, url: admin_supervisors_path do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>
      
      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
      
      <%= f.label :profile %>
      <%= f.text_area :profile %>
      
      <%= f.submit "Create supervisor", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
