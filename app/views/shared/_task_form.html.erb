<%= form_for(@task) do |f| %>
<%= f.hidden_field :subject_id, value: @subject.id %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
    
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <%= f.submit "Add", class: "btn btn-large btn-primary" %>
<% end %>