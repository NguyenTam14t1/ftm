<h3>Enrolled users into this course</h3>
<% if @assignments.any? %>
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Bio</th>
      </tr>
      </thead>
      <% @assignments.each do |assignment| %>
          <tbody>
          <tr>
            <td><%= link_to assignment.user.name, assignment.user %></td>
            <td><%= assignment.user.email %></td>
            <td><%= assignment.user.profile %></td>
          </tr>
          </tbody>
      <% end %>
    </table>

<% end %>