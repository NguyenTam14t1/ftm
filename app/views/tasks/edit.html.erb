<% provide(:title, "Edit task") %>
<h1>Edit task</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@task) do |f| %>
    <%= f.hidden_field :subject_id, value: @task.subject.id %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>
        
        <%= f.label :description %>
        <%= f.text_field :description %>
      </div>
      <%= f.submit "Update task", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
